# OpenMineral Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# APPLICATION SETTINGS
# ==========================================

# Application
APP_NAME=OpenMineral
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=openmineral
POSTGRES_USER=openmineral
POSTGRES_PASSWORD=devpassword

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MongoDB (for documents and unstructured data)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=openmineral

# ==========================================
# AI/ML CONFIGURATION
# ==========================================

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_org_id_here
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google AI (Gemini)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_MODEL=gemini-pro

# Hugging Face (for local models)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=meta-llama/Llama-3.1-8B-Instruct

# Vector Databases
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_environment
PINECONE_INDEX=commodity-knowledge

WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_api_key_here

# ==========================================
# EXTERNAL APIs
# ==========================================

# Market Data Providers
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FINNHUB_API_KEY=your_finnhub_key
TWELVE_DATA_API_KEY=your_twelve_data_key

# Alternative Data
PLANET_LABS_API_KEY=your_planet_labs_key
MARINE_TRAFFIC_API_KEY=your_marine_traffic_key

# News & Sentiment
NEWSAPI_KEY=your_newsapi_key
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# ==========================================
# CLOUD CONFIGURATION
# ==========================================

# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=openmineral-data

# Azure
AZURE_SUBSCRIPTION_ID=your_subscription_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
AZURE_TENANT_ID=your_tenant_id

# ==========================================
# SECURITY & AUTHENTICATION
# ==========================================

# JWT
JWT_SECRET_KEY=your_super_secret_jwt_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key

# ==========================================
# MONITORING & LOGGING
# ==========================================

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here

# DataDog
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key

# Prometheus
PROMETHEUS_PORT=9090

# ==========================================
# DEVELOPMENT TOOLS
# ==========================================

# LangSmith (LangChain monitoring)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key
LANGCHAIN_PROJECT=openmineral-dev

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=openmineral

# ==========================================
# EMAIL & NOTIFICATIONS
# ==========================================

# SMTP
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Slack
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_BOT_TOKEN=your_slack_bot_token

# ==========================================
# COMPLIANCE & REGULATORY
# ==========================================

# OFAC Sanctions
OFAC_API_KEY=your_ofac_api_key

# EU Regulatory
EU_SANCTIONS_API_KEY=your_eu_api_key

# KYC Providers
ONFRIO_API_KEY=your_onfrio_api_key
VERIFF_API_KEY=your_veriff_api_key

# ==========================================
# FEATURE FLAGS
# ==========================================

# AI Features
ENABLE_AI_ANALYSIS=true
ENABLE_AI_TRADING=true
ENABLE_SENTIMENT_ANALYSIS=true

# Real-time Features
ENABLE_WEBSOCKETS=true
ENABLE_REAL_TIME_DATA=true

# Compliance Features
ENABLE_KYC=true
ENABLE_COMPLIANCE_CHECK=true

# ==========================================
# PERFORMANCE & SCALING
# ==========================================

# Worker Processes
WORKER_PROCESSES=4
MAX_WORKERS=8

# Connection Pooling
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
REDIS_POOL_SIZE=20

# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# ==========================================
# LOGGING
# ==========================================

LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/openmineral.log

# Structured Logging
STRUCTLOG_PROCESSORS=json
STRUCTLOG_CONTEXT_CLASS=dict

# ==========================================
# TESTING
# ==========================================

# Test Database
TEST_POSTGRES_DB=openmineral_test
TEST_MONGODB_DB=openmineral_test

# Mock Services
USE_MOCK_AI=false
USE_MOCK_MARKET_DATA=false

# ==========================================
# BACKUP & RECOVERY
# ==========================================

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Disaster Recovery
DR_REGION=us-west-2
DR_BUCKET=openmineral-dr

# ==========================================
# LEGAL & COMPLIANCE
# ==========================================

COMPANY_NAME=OpenMineral Inc.
COMPANY_ADDRESS=123 Trading Street, Financial District
REGULATORY_JURISDICTION=United States
DATA_RETENTION_YEARS=7

# ==========================================
# EXPERIMENTAL FEATURES
# ==========================================

# Quantum Computing
ENABLE_QUANTUM_OPTIMIZATION=false
IBM_QUANTUM_TOKEN=your_ibm_quantum_token

# Web3/Blockchain
ENABLE_BLOCKCHAIN_INTEGRATION=false
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# AR/VR Trading
ENABLE_AR_TRADING=false
ENABLE_VR_COLLABORATION=false

# ==========================================
# THIRD-PARTY INTEGRATIONS
# ==========================================

# Trading Platforms
INTERACTIVE_BROKERS_API_KEY=your_ib_api_key
INTERACTIVE_BROKERS_SECRET=your_ib_secret

# Exchanges
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET=your_binance_secret

# Data Providers
BLOOMBERG_TERMINAL_ID=your_bloomberg_id
REFINITIV_API_KEY=your_refinitiv_key

# ==========================================
# METRICS & ANALYTICS
# ==========================================

# Business Intelligence
ENABLE_BI_DASHBOARD=true
BI_TOOL=metabase
BI_DATABASE_URL=postgresql://bi_user:bi_pass@localhost:5432/bi_db

# Custom Metrics
ENABLE_CUSTOM_METRICS=true
METRICS_RETENTION_DAYS=90

# ==========================================
# MAINTENANCE
# ==========================================

# Scheduled Maintenance
MAINTENANCE_WINDOW=Sunday 02:00-04:00 UTC
MAINTENANCE_NOTIFICATION_HOURS=24

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ==========================================
# SUPPORT & HELP
# ==========================================

SUPPORT_EMAIL=support@openmineral.dev
SUPPORT_PHONE=+1-555-OPEN-MINERAL
DOCUMENTATION_URL=https://docs.openmineral.com
API_DOCUMENTATION_URL=https://api.openmineral.com/docs
